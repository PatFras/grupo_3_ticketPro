<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head') %>

  <body class="register">
    <div class="register_conteiner">
      <header class="register_header">
        <a href="/"><img src="/images/logo.png" alt="POST" /></a>
      </header>
      <form class="register_form" action="" method="POST" id="formAdd">
        <div class="register_form-inputs">
          <input
            type="text"
            name="userName"
            id="userName"
            placeholder="Nombre de usuario"
            class="form-control <%= locals.errors && (errors.userName && 'is-invalid') %>"
          />
          <% if (locals.errors && errors.userName) { %>
          <small id="msg-error-name"><%= errors.userName.msg %> </small>
          <% } %>
          <input
            type="email"
            name="email"
            id="email"
            placeholder="Correo"
            class="form-control <%= locals.errors && (errors.email && 'is-invalid') %>"
          />
          <% if (locals.errors && errors.email) { %>
          <small id="msg-error-email"><%= errors.email.msg %> </small>
          <% } %>
          <input
            type="password"
            name="password"
            id="password"
            placeholder="ContraseÃ±a"
            class="form-control <%= locals.errors && (errors.password && 'is-invalid') %>"
          />
          <% if (locals.errors && errors.password) { %>
          <small id="msg-error-password"><%= errors.password.msg %> </small>
          <% } %>
          <input
            type="password"
            name="password2"
            id="password2"
            placeholder="Reingresar contraseÃ±a"
            class="form-control <%= locals.errors && (errors.password2 && 'is-invalid') %>"
          />
          <% if (locals.errors && errors.password2) { %>
          <small id="msg-error-password2"><%= errors.password2.msg %> </small>
          <% } %>

          <small class="text-danger ms-2" id="msg-error-empty" %> </small>
        </div>
        <div class="register_form-buttons">
          <button class="register_form-buttons-register" type="submit">
            Registrarse
          </button>
          <a href="/users/login" class="register_form-buttons-singIn"
            ><p>Ingresar</p></a
          >
        </div>
      </form>
    </div>
    <script src="/js/register.js"></script>
  </body>
</html>
