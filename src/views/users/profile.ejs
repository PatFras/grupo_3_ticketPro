<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head') %>

  <body class="profile">
    <div class="profile_container">
      <header class="profile_header">
        <a href="/"><img src="/images/logo.png" alt="POST" /></a>
        <h1>Edición de perfil</h1>
      </header>
      <form
        class="profile_form"
        action="/users/profile?_method=PUT"
        method="POST"
      >
        <div class="profile_form-inputs">
          <input
            id="name"
            type="text"
            name="name"
            placeholder="Nombre"
            value="<%= name %>"
          />
          <small id="nameError"></small>
          <% if (locals.errors && errors.name) { %>
          <small><%= errors.name.msg %></small>
          <% } %>
          <input
            id="email"
            type="email"
            name="email"
            placeholder="Email"
            value="<%= email %>"
            readonly
          />
          <small id="emailError"></small>
          <a href="#" id="changePasswordBtn">Cambiar Contraseña</a>
          <div id="passwordFields" style="display: none">
            <div class="profile_form-inputs">
              <label for="password"></label>
              <input
                id="password"
                type="password"
                name="password"
                placeholder="Ingresar nueva contraseña"
              />
              <small id="passwordError"></small>
              <% if (locals.errors && errors.password) { %>
              <small><%= errors.password.msg %></small>
              <% } %>
            </div>
            <div class="profile_form-inputs">
              <label for="password2"></label>
              <input
                id="password2"
                type="password"
                name="password2"
                placeholder="Reingresar contraseña"
              />
              <small id="password2Error"></small>
              <% if (locals.errors && errors.password2) { %>
              <small><%= errors.password2.msg %></small>
              <% } %>
            </div>
          </div>
        </div>
        <div class="profile_form-buttons">
          <button id="btn" class="profile_form-buttons-profile" type="submit">
            Actualizar
          </button>
        </div>
        <% if (successMsg===1) { %>
        <span class="profile-successMsg"
          >¡Tus datos se actualizaron exitosamente!</span
        >
        <% } %>
      </form>
    </div>
    <script src="/js/profile.js"></script>
  </body>
</html>
