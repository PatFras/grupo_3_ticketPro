<!DOCTYPE html>
<html lang="en">
    <link rel="stylesheet" href="/stylesheets/searchResults.css">
<%- include('partials/head') %>
<body>
    <%- include('partials/header') %>
    
    <div class="col-12">
        <h2 class="products-title">Resultados de la búsqueda: <%= keywords %> </h2>
    </div>

    <% if (results.length) { %>
        <% results.forEach(product => { %>
            <div class="div__card--cercaDeTi">
                <img class="div__card--cercaDeTi-img" src="/images/<%= product.image %>" alt="">
                <p class="div__card--title"><%= product.name %></p>
                <p><%= product.date %></p>
                <p><%= product.location %></p>
                <a href="/products/productDetail/<%= product.id %>">
                    <button class="div__card--cercaDeTi-button">comprar</button>
                </a>
            </div>
        <% }) %>
    <% } else { %>
        <div class="col-12">
            <h2 class="products-title" style="display: flex; justify-content: center; color: tomato; padding: 200px 10px;
        ">No se encontraron resultados para esta búsqueda</h2>
        </div>
    <% } %>
    
    <%- include('partials/footer') %>
</body>
</html>